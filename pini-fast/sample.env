# Application Settings
PORT=8088
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Database & Storage
DATABASE_PATH=../persistent/database.sqlite
UPLOADS_PATH=../persistent/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt

# Authentication & Security  
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-long-and-random-at-least-32-characters
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# Initial Admin User Configuration (Required for first setup)
# This admin user will be created automatically on first run if ENABLE_ADMIN_BOOTSTRAP=true
ADMIN_EMAIL=admin@company.com
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator
ADMIN_PASSWORD=ChangeThisPassword123!

# Role System Configuration
DEFAULT_USER_ROLE=user
ENABLE_ADMIN_BOOTSTRAP=true
ROLE_ASSIGNMENT_AUDIT=true